              label(for="login") Login
              input.form-control(id='login', type='text', autofocus='', value=user.login, disabled)
            .form-group
              label(for="gpa") GPA
              input.form-control(id='gpa', type='text', autofocus='', value=user.gpa)
            .form-group
              label(for="tepitechScore") Tepitech Score
              input.form-control(id='tepitechScore', type='text', autofocus='', value=user.tepitechScore)
            .form-group
              label(for="toeflScore") TOEFL Score
              input.form-control(id='toeflScore', type='text', autofocus='', value=user.toeflScore)