block layout
  .container
    .row
      .panel-body
      .col-md-3
        form(role='form' method='POST')
          fieldset
            if error
              .alert.alert-danger=error
            //.form-group
              label(for="wish1") Wish 1
              input.form-control(placeholder='', id='wish1', type='text', autofocus='', value=)
